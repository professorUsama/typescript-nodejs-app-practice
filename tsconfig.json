{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "outDir": "dist",
    "baseUrl": ".",
    "module": "Node16",
    "moduleResolution": "Node16",
    "paths": {
      "@src/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.js"],
  "exclude": ["node_modules"]
}
